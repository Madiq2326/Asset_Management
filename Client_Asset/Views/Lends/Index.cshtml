
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body style="background-color: #F7F7F8">
    <div style="padding: 25px;" class="animated fadeIn">
        <div class="row">
            <div class="col-md-6">
                <h5 style="font-size: 25px;">Lends</h5>
            </div>
            <div class="col-md-6">
                <button style="float: right; margin:5px" type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" data-backdrop="static" data-keyboard="false" onclick="ClearScreen();"><i class="fa fa-plus"></i>&nbsp;&nbsp;&nbsp;Add Data</button>
            </div>
        </div>
        <hr />
        <table id="table_lends" align="center" class="table table-hover table-bordered table-responsive-sm table-striped">
            <thead class="thead-light" style="text-align: center;">
                <tr>
                    <th style="width: 6%">No.</th>
                    <th>Date</th>
                    <th>Name</th>
                    <th>Qty</th>
                    <th>Status</th>
                    <th>Action</th>
                    <th>Option</th>
                </tr>
            </thead>
            <tbody style="opacity: 0.7;"></tbody>
        </table>
    </div>
</body>
<!-- /.-body -->

<div class="modal fade" id="myModal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add Lend</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" class="form-control" id="lendIdText" />
                <label for="item">Item</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1"><i class="fa fa-user"></i></span>
                    </div>
                    <select class="form-control" id="itemNameText" name="item">
                        <option value="">-Select Item-</option>
                        @foreach (var item in ViewBag.Item)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div>
                @*<label for="lend_date">Lend Date</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1"><i class="fa fa-calendar"></i></span>
                    </div>
                    <input id="dateNameText" type="text" class="form-control" required="" disabled>
                </div>*@
                <input hidden id="statusNameText" type="text" class="form-control" required="" placeholder="Status">
                <label for="quantity">Quantity</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1"><i class="fa fa-calendar"></i></span>
                    </div>
                    <input id="qtyNameText" type="number" min="1" class="form-control" required="" placeholder="Quantity">
                </div>
                <div class="padding-top: 60px">
                    <hr>
                    <div class="form-group" align="right">
                        <button type="button" class="btn btn-success" id="Save" onclick="Validation();"><i class="fa fa-check"></i>&nbsp;&nbsp;Save</button>
                        <button type="button" class="btn btn-primary" id="Update" onclick="Validation();"><i class="fa fa-edit"></i>&nbsp;&nbsp;Update</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal"><i class="fa fa-close"></i>&nbsp;&nbsp;Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <!-- jQuery -->
    <script src="~/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- DataTables -->
    <script src="~/DataTables/DataTables-1.10.18/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="~/DataTables/DataTables-1.10.18/js/dataTables.bootstrap4.min.js" type="text/javascript"></script>
    <!-- AdminLTE App -->
    <script src="~/dist/js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/dist/js/demo.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment.min.js"></script>

    <script>
        $(document).ready(function () {
            var tabel = $("#table_lends").DataTable({
                "ajax": {
                    "url": "/Lends/List",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    { "data": null },
                    {
                        "data": "lend_Date",
                        "render": function (d) {
                            return moment(d).format('DD-MM-YYYY');
                        }
                    },
                    { "data": "item_id" },
                    { "data": "quantity" },
                    { "data": "status" },
                    {
                        "render": function (data, type, row, meta) {
                            return "<a onclick=GetById('" + row.id + "');><i class='fa fa-edit'></i></a> | <a onclick= Delete('" + row.id + "');><i class='fa fa-trash'></i></a>"
                        }
                    },
                    {
                        "render": function (data, type, row, meta) {

                        }
                    }
                ],

                "columnDefs": [{
                    "searchable": false,
                    "orderable": false,
                    "targets": 0
                }],
                "order": [[1, 'asc']]
            });
            tabel.on('order.dt search.dt', function () {
                tabel.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                    cell.innerHTML = i + 1;
                });
            }).draw();
        });
    </script>

    <script>
        function Save() {
            var lend = new Object();
            lend.item_id = $("#itemNameText").val();
            lend.lend_date = $("#dateNameText").val();
            lend.quantity = $("#qtyNameText").val();
            lend.status = $("#statusNameText").val();
            $.ajax({
                "url": "/Lends/Create",
                "type": "POST",
                "datatype": "json",
                "data": lend
            }).then((result) => {
                if (result.data[0] != 0) {
                    Swal.fire(
                        'Success!',
                        'Your file has been inserted.',
                        'success'
                    ).then(() => {
                        $('#table').DataTable().ajax.reload();
                    })
                }
                else {
                    Swal.fire(
                        'Failed!',
                        'Your file not inserted.',
                        'failed'
                    ).then(() => {
                        $('#table').DataTable().ajax.reload();
                    })
                }
                $("#myModal").modal('hide');
            })
        }

        function Validation() {
            if ($("#itemNameText").val() == "" || $("#itemNameText").val == " ") {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops..',
                    text: 'Please Fill Name'
                })
            }
            else if ($("#lendIdText").val() == "" || $("#lendIdText").val == " ") {
                Save();
            }
            else {
                Edit($("#lendIdText").val());
            }
        }

        function ClearScreen() {
            $("#itemNameText").val('');
            $("#dateNameText").val('');
            $("#qtyNameText").val('');
            $("#statusNameText").val('Waiting')
            $("#Update").hide();
            $("#Save").show();
        }

        function Delete(Id) {
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.value) {
                    $.ajax({
                        "url": "/Lends/Delete/",
                        "datatype": "json",
                        "data": { id: Id }
                    }).then((result) => {
                        if (result.data[0] != 0) {
                            Swal.fire(
                                'Success!',
                                'Your file has been deleted.',
                                'success'
                            ).then(() => {
                                $('#table').DataTable().ajax.reload();
                            })
                        }
                        else {
                            Swal.fire(
                                'Failed!',
                                'Your file not deleted.',
                                'failed'
                            ).then(() => {
                                $('#table').DataTable().ajax.reload();
                            })
                        }
                        $("#myModal").modal('hide');
                    })
                }
            })
        }

        function GetById(Id) {
            $.ajax({
                "url": "/Lends/GetById/" + Id,
                "type": "GET",
                "datatype": "json",
                "data": { Id: Id }
            }).then((result) => {
                if (result.data != null) {
                    $("#itemNameText").val(result.data.item_id);
                    $("#dateNameText").val(result.data.lend_date);
                    $("#qtyNameText").val(result.data.quantity);

                    $("#myModal").modal('show');
                    $("#Update").show();
                    $("#Save").hide();
                }
            });
        }

