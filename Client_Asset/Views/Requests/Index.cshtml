@section Scripts{
    <!-- jQuery -->
    <script src="~/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- DataTables -->
    <script src="~/DataTables/DataTables-1.10.18/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="~/DataTables/DataTables-1.10.18/js/dataTables.bootstrap4.min.js" type="text/javascript"></script>
    <!-- AdminLTE App -->
    <script src="~/dist/js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/dist/js/demo.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment.min.js"></script>

    <script>
        $(document).ready(function () {
            var tabel = $("#table_req").DataTable({
                "ajax": {
                    "url": "/Requests/List",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    { "data": null },
                    { "data": "name" },
                    { "data": "type" },
                    { "data": "quantity" },
                    { "data": "information" },
                    { "data": "status" },
                    {
                        "render": function (data, type, row, meta) {
                            return "<a onclick=GetById('" + row.id + "');><i class='fa fa-edit'></i></a> | <a onclick= Delete('" + row.id + "');><i class='fa fa-trash'></i></a>"
                        }
                    }
                ],

                "columnDefs": [{
                    "searchable": false,
                    "orderable": false,
                    "targets": 0
                }],
                "order": [[1, 'asc']]
            });
            tabel.on('order.dt search.dt', function () {
                tabel.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                    cell.innerHTML = i + 1;
                });
            }).draw();
        });
    </script>
    <script>
        function Save() {
            var request = new Object();
            request.name = $("#reqNameText").val();
            request.type = $("#reqTypeText").val();
            request.quantity = $("#qtyNameText").val();
            request.information = $("#infoNameText").val();
            request.status = $("#statusNameText").val();
            request.item_id = $("#itemNameText").val();
            request.brand_id = $("#brandNameText").val();
            //request.approve_date_1 = $("#app1NameText").val();
            //request.approve_date_2 = $("#app2NameText").val();
            $.ajax({
                "url": "/Requests/Create",
                "type": "POST",
                "datatype": "json",
                "data": request
            }).then((result) => {
                if (result.data[0] != 0) {
                    Swal.fire(
                        'Success!',
                        'Your file has been inserted.',
                        'success'
                    ).then(() => {
                        $('#table').DataTable().ajax.reload();
                    })
                }
                else {
                    Swal.fire(
                        'Failed!',
                        'Your file not inserted.',
                        'failed'
                    ).then(() => {
                        $('#table').DataTable().ajax.reload();
                    })
                }
                $("#myModal").modal('hide');
            })
        }

        function Validation() {
            if ($("#itemNameText").val() == "" || $("#itemNameText").val == " ") {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops..',
                    text: 'Please Fill Name'
                })
            }
            else if ($("#lendIdText").val() == "" || $("#lendIdText").val == " ") {
                Save();
            }
            else {
                Edit($("#lendIdText").val());
            }
        }

        function ClearScreen() {
            $("#reqNameText").val('');
            $("#reqTypeText").val('');
            $("#qtyNameText").val('');
            $("#infoNameText").val('');
            $("#statusNameText").val('Waiting');
            $("#itemNameText").val('');
            $("#brandNameText").val('');
            $("#Update").hide();
            $("#Save").show();
        }

        function Delete(Id) {
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.value) {
                    $.ajax({
                        "url": "/Requests/Delete/",
                        "datatype": "json",
                        "data": { id: Id }
                    }).then((result) => {
                        if (result.data[0] != 0) {
                            Swal.fire(
                                'Success!',
                                'Your file has been deleted.',
                                'success'
                            ).then(() => {
                                $('#table').DataTable().ajax.reload();
                            })
                        }
                        else {
                            Swal.fire(
                                'Failed!',
                                'Your file not deleted.',
                                'failed'
                            ).then(() => {
                                $('#table').DataTable().ajax.reload();
                            })
                        }
                        $("#myModal").modal('hide');
                    })
                }
            })
        }

        function GetById(Id) {
            $.ajax({
                "url": "/Requests/GetById/" + Id,
                "type": "GET",
                "datatype": "json",
                "data": { Id: Id }
            }).then((result) => {
                if (result.data != null) {
                    $("#lendIdText").val(result.data.id);
                    $("#reqNameText").val(result.data.name);
                    $("#reqTypeText").val(result.data.type);
                    $("#qtyNameText").val(result.data.quantity);
                    $("#infoNameText").val(result.data.information);
                    $("#itemNameText").val(result.data.item_id);
                    $("#brandNameText").val(result.data.brand_id);

                    $("#myModal").modal('show');
                    $("#Update").show();
                    $("#Save").hide();
                }
            });
        }

        function Edit(Id) {
            var request = new Object();
            request.id = $("#lendIdText").val();
            request.name = $("#reqNameText").val();
            request.type = $("#reqTypeText").val();
            request.quantity = $("#qtyNameText").val();
            request.information = $("#infoNameText").val();
            request.item_id = $("#itemNameText").val();
            request.brand_id = $("#brandNameText").val();
            $.ajax({
                "url": "/Requests/Edit/" + Id,
                "type": "POST",
                "datatype": "json",
                "data": request
            }).then((result) => {
                if (result.data != 0) {
                    Swal.fire(
                        'Success!',
                        'Your file has been updated.',
                        'success'
                    ).then(() => {
                        $('#table').DataTable().ajax.reload();
                    })
                }
                else {
                    Swal.fire(
                        'Failed!',
                        'Your file not updated.',
                        'failed'
                    ).then(() => {
                        $('#table').DataTable().ajax.reload();
                    })
                }
                $("#myModal").modal('hide');
            })
        }
    </script>
}
