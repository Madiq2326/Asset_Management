<div class="modal fade" id="myModal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add Request</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6" style="border-right: 1px #eee solid">
                        <input type="hidden" class="form-control" id="lendIdText" />
                        <label for="name">Item Name</label>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1"><i class="fa fa-list-alt"></i></span>
                            </div>
                            <input id="reqNameText" type="text" class="form-control" required="" placeholder="Item Name">
                        </div>
                        <label for="item">Item</label>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1"><i class="fa fa-list-alt"></i></span>
                            </div>
                            <select class="form-control" id="itemNameText" name="item">
                                <option value="">-Select Item-</option>
                                @foreach (var item in ViewBag.Item)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>
                        <label for="type">Type</label>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1"><i class="fa fa-ellipsis-v"></i></span>
                            </div>
                            <input id="reqTypeText" type="text" class="form-control" placeholder="Type" required="">
                        </div>
                        <label for="quantity">Quantity</label>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1"><i class="fa fa-cubes"></i></span>
                            </div>
                            <input id="qtyNameText" type="number" min="1" class="form-control" required="" placeholder="Quantity">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label for="brand">Brand</label>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1"><i class="fa fa-user"></i></span>
                            </div>
                            <select class="form-control" id="brandNameText">
                                <option value="">--Select Brand--</option>
                                @foreach (var item in ViewBag.brand)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>
                        <input hidden id="statusNameText" type="text" class="form-control" required="" placeholder="Status">
                        <label for="information">Information</label>
                        <div class="input-group mb-3">
                            <textarea id="infoNameText" class="form-control" placeholder="Information" required=""></textarea>
                        </div>
